<?xml version="1.0" encoding="UTF-8"?>

<?import club.xiaojiawei.controls.Date?>
<?import club.xiaojiawei.controls.ico.DateIco?>
<?import club.xiaojiawei.controls.Time?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.HBox?>
<fx:root type="Group" xmlns="http://javafx.com/javafx"
         styleClass="date-time-root-pane"
         xmlns:fx="http://javafx.com/fxml" stylesheets="@css/dateTime.css">
    <StackPane fx:id="dateTimeOuterUI">
        <Label fx:id="dateTimeBg" styleClass="dateTimeBackground, rightAngleBackground"/>
        <HBox alignment="CENTER" minWidth="150">
            <Date fx:id="dateControls" showIcon="false" showBg="false"/>
            <Label styleClass="dateTimeSeparator" text="-"/>
            <Time fx:id="timeControls" showBg="false" showIcon="false"/>
            <DateIco fx:id="dateTimeIco" color="main-shallow-color" translateX="-5"/>
        </HBox>
    </StackPane>
</fx:root>
