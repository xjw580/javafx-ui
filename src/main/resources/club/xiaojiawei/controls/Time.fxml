<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<fx:root type="AnchorPane" xmlns:fx="http://javafx.com/fxml" stylesheets="@css/time.css">
    <Label fx:id="timeBG" styleClass="timeBackground"/>
    <HBox translateX="5">
        <TextField fx:id="hour" promptText="时" styleClass="text-field"/>
        <Label text=":" styleClass="timeSeparator"/>
        <TextField fx:id="min" promptText="分" styleClass="text-field"/>
        <AnchorPane fx:id="timeIco"/>
    </HBox>
</fx:root>
