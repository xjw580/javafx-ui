<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import club.xiaojiawei.controls.PasswordTextField?>
<ScrollPane xmlns="http://javafx.com/javafx"
            style="-fx-padding: 20 0 0 0"
            xmlns:fx="http://javafx.com/fxml">
    <VBox styleClass="hv-box">
        <Label text="不使用样式" styleClass="title-two"/>
        <VBox styleClass="hv-box" alignment="CENTER_LEFT">
            <PasswordTextField/>
        </VBox>
        <Label text="使用样式（通用TextField的样式）" styleClass="title-two"/>
        <Label text="基类：text-field-ui" styleClass="title-three"/>
        <VBox styleClass="hv-box" alignment="CENTER_LEFT">
            <PasswordTextField styleClass="text-field-ui"/>
        </VBox>
        <Label text="大小类：text-field-ui-small、text-field-ui-big" styleClass="title-three"/>
        <VBox styleClass="hv-box" alignment="CENTER_LEFT">
            <PasswordTextField styleClass="text-field-ui, text-field-ui-small"/>
            <PasswordTextField styleClass="text-field-ui, text-field-ui-big"/>
        </VBox>
        <Label text="hideForever属性为true时隐藏眼睛图标" styleClass="title-three"/>
        <VBox styleClass="hv-box" alignment="CENTER_LEFT">
            <PasswordTextField text="fdfsf" styleClass="text-field-ui" hideForever="true"/>
        </VBox>
    </VBox>
</ScrollPane>