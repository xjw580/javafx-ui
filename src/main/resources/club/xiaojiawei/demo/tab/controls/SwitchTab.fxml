<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import club.xiaojiawei.controls.Switch?>
<ScrollPane xmlns="http://javafx.com/javafx"
            style="-fx-padding: 20 0 0 0"
            xmlns:fx="http://javafx.com/fxml">
    <VBox styleClass="hv-box">
        <Label text="可通过size属性调整开关大小" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <Switch size="15"/>
            <Switch/>
            <Switch size="30" status="false"/>
        </HBox>
        <Label text="可通过transitionType属性调整动画效果（FADE、SLIDE_X、NONE）" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <Switch transitionType="SLIDE_X"/>
            <Switch transitionType="NONE"/>
        </HBox>
        <Label text="禁用样式" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <Switch disable="true"/>
        </HBox>
        <Label text="记载样式" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <Switch loading="true"/>
        </HBox>
    </VBox>
</ScrollPane>