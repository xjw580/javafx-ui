<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import club.xiaojiawei.controls.TableFilterManager?>
<?import club.xiaojiawei.controls.TableDateFilterManager?>
<ScrollPane xmlns="http://javafx.com/javafx"
            fx:controller="club.xiaojiawei.demo.tab.style.TabViewController"
            style="-fx-padding: 20 0 0 0"
            xmlns:fx="http://javafx.com/fxml">
    <VBox styleClass="hv-box">
        <Label text="基类：table-view-ui" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <TableView fx:id="tableViewDemo" styleClass="table-view-ui" prefHeight="200">
                <columns>
                    <TableColumn text="学号">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="姓名">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="性别">
                        <cellValueFactory>
                            <PropertyValueFactory property="sex"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="年龄">
                        <cellValueFactory>
                            <PropertyValueFactory property="age"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="日期">
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </HBox>
        <Label text="大小类：table-view-ui-small、table-view-ui-big" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <TableView fx:id="tableViewSmallDemo" styleClass="table-view-ui, table-view-ui-small" prefHeight="200" >
                <columns>
                    <TableColumn text="学号">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="姓名" fx:id="nameTableColumn">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="性别" fx:id="sexTableColumn">
                        <graphic>
                            <TableFilterManager tableView="$tableViewDemo" tableColumn="$sexTableColumn"/>
                        </graphic>
                        <cellValueFactory>
                            <PropertyValueFactory property="sex"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="年龄">
                        <cellValueFactory>
                            <PropertyValueFactory property="age"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="日期" fx:id="dateTableColumn">
                        <graphic>
                            <TableDateFilterManager tableView="$tableViewDemo" tableColumn="$dateTableColumn"/>
                        </graphic>
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <TableView fx:id="tableViewBigDemo" styleClass="table-view-ui, table-view-ui-big" prefHeight="200">
                <columns>
                    <TableColumn text="学号">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="姓名">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="性别">
                        <cellValueFactory>
                            <PropertyValueFactory property="sex"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="年龄">
                        <cellValueFactory>
                            <PropertyValueFactory property="age"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="日期">
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </HBox>

        <Label text="样式类：table-view-ui-upright" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <TableView fx:id="tableViewUprightDemo" styleClass="table-view-ui, table-view-ui-upright" prefHeight="200">
                <columns>
                    <TableColumn text="学号">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="姓名">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="性别">
                        <cellValueFactory>
                            <PropertyValueFactory property="sex"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="年龄">
                        <cellValueFactory>
                            <PropertyValueFactory property="age"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="日期">
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </HBox>
    </VBox>
</ScrollPane>