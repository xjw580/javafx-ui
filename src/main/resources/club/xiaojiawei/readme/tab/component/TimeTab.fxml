<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import club.xiaojiawei.controls.Time?>
<ScrollPane xmlns="http://javafx.com/javafx"
            style="-fx-padding: 20 0 0 0"
            xmlns:fx="http://javafx.com/fxml">
    <VBox styleClass="hv-box">
        <Label text="通过showSelector、showBg、showSec调整选择器、背景可见性、显示秒" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <Time/>
            <Time showSelector="false"/>
            <Time showBg="false"/>
            <Time showBg="false" showSelector="false"/>
        </HBox>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <Time showSec="true"/>
            <Time showSelector="false" showSec="true"/>
            <Time showBg="false" showSec="true"/>
            <Time showBg="false" showSelector="false" showSec="true"/>
        </HBox>
    </VBox>
</ScrollPane>