<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane xmlns="http://javafx.com/javafx"
            style="-fx-padding: 20 0 0 0"
            xmlns:fx="http://javafx.com/fxml">
    <VBox styleClass="hv-box">
        <Label text="基类：toggle-btn-ui（可以使用Button的样式）" styleClass="title-three"/>
        <HBox styleClass="hv-box" alignment="CENTER_LEFT">
            <fx:define>
                <ToggleGroup fx:id="toggleGroup"/>
            </fx:define>
            <ToggleButton toggleGroup="$toggleGroup" styleClass="toggle-btn-ui" text="梅西" selected="true"/>
            <ToggleButton toggleGroup="$toggleGroup" styleClass="toggle-btn-ui" text="C罗"/>
        </HBox>
    </VBox>
</ScrollPane>
